# 10. SSH Keychain
# ================
# OS X includes keychain now, cool.
if linux; then
    if which keychain >/dev/null 2>&1; then
        keychain ~/.ssh/id_rsa
        source ~/.keychain/${KEYCHAIN_HOST}-sh > /dev/null
    else
        echo ">>> You need to install keychain."
        echo "try: sudo aptitude install keychain"
    fi
fi
